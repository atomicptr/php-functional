{
    "name": "atomicptr/functional",
    "description": "A set of tools to enable a more functional style of programming in PHP, inspired by OCaml",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Atomicptr\\Functional\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Christopher Kaster",
            "email": "me@atomicptr.de"
        }
    ],
    "require": {
        "php": ">=8.3"
    },
    "require-dev": {
        "pestphp/pest": "^3",
        "clean/phpdoc-md": "^0.19.3",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-strict-rules": "^2.0",
        "phpstan/phpdoc-parser": "^2.3",
        "phpstan/extension-installer": "^1.4"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    }
}
